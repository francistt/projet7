{% extends 'base.html.twig' %}

{% block title %}
    Bienvenue
{% endblock %}

{% block header %}
    <h2><voici le header</h2>
{% endblock %}

{% block body %} 
<div class="container">
    <div class="jumbotron mt-3">
        <h1 class="display-4" id="mainTitle">Bienvenue sur Europe4strays</h1>
        <p class="lead">Nous mettons en relation les animaux en attente d'adoption</p>
        <hr class="my-4">
        <p>Vous êtes dans l'attente d'un compagon ?</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="{{ path('ads_index') }}" role="button">Voir nos annonces</a>
        </p>
    </div>

    <h2 class="h1 my-5">Nos derniers arrivants</h2>

    <div class="row">
        {% for data in ads %}
            {% include 'ad/_ad.html.twig' with {'ad' : data.annonce} %}
        {% endfor %}
    </div>    

    <h2 class="h1 my-5">Nos meilleurs hôtes</h2>
    <div class="row">
        {% for data in users %}
        <div class="col">
            <div class="card border-secondary mb-3">
                <div class="card-body">
                    <h4 class="card-title">{{data.user.fullName}}</h4>

                    <hr>

                    <div class="card-text">
                        <img src="{{data.user.picture}}" alt="Avatar de {{data.user.fullName}}" class="float-left mr-3">
                        <p>{{data.user.introduction}}</p>
                        <a href="{{ path('user_show', {'slug' : data.user.slug})}}" class="btn btn-success float-right">En savoir plus!</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>    
</div>
{% endblock %}